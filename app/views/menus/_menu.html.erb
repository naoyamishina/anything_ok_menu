<div class="col-sm-12 col-lg-4 mb-3">
  <div id="menu-id-<%= menu.id %>">
    <div class="card">
      <%= image_tag menu.menu_image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to menu.name, menu_path(menu) %>
        </h4>
        <% if logged_in? %>
          <% if current_user.own?(menu) %>
            <%= render 'crud_menus', menu: menu %>
          <% else %>
            <%= render 'like_button', menu: menu  %>
          <% end %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= menu.user.name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l menu.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= menu.memo %></p>
      </div>
    </div>
  </div>
</div>