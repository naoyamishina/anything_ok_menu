<tr>
  <td>
    <%= menu.id %>
  </td>
  <td>
    <%= link_to menu.name, admin_menu_path(menu) %>
  </td>
  <td>
    <%= menu.user.name %>
  </td>
  <td>
    <%= l menu.created_at, format: :long %>
  </td>
  <td>
    <%= link_to t('defaults.show'), admin_menu_path(menu), class: 'btn btn-info' %>
    <%= link_to t('defaults.edit'), edit_admin_menu_path(menu), class: 'btn btn-success' %>
    <%= link_to t('defaults.delete'), admin_menu_path(menu), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm')}, class: 'btn btn-danger' %>
  </td>
</tr>