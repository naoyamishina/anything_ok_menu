<% content_for(:title, t('.title')) %>
<div class="container pt-3 mb-5 mt-3">
  <div class="col-lg-4 mb-5 mx-auto border p-4 bg-light">
    <h1 class="text-center mb-3"><%= t '.title' %></h1>
    <%= form_with url: login_path, local: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :password, User.human_attribute_name(:password) %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="actions text-center mb-3">
        <%= f.submit (t 'defaults.login'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class='text-center mb-2'>
      <%= link_to (t '.to_register_page'), new_user_path %>
    </div>
    <%
=begin%>
 <div class='text-center mb-2'>
      <a href="#"><%= t '.password_forget' %></a>
    </div> 
<%
=end%>
  </div>
</div>