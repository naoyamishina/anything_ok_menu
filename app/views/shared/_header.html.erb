<header>
  <nav class='navbar navbar-expand navigation navbar-light bg-light'>
    <%= link_to menus_path, class: 'navbar-brand' do %>
      <%= image_tag 'logo.png' %>
    <% end %>

      <ul class='navbar-nav ms-auto main-nav align-items-center'>
        <li class='nav-item d-none d-lg-block'>
          <%= link_to t('defaults.create_menu'), new_menu_path, class: 'btn btn-danger btn-sm mx-1' %>
          <%= link_to t('マイページ'), user_path(current_user.id), class: 'btn btn-danger btn-sm mx-1' %>
        </li>
        <li class="px-3">
          <%= link_to notifications_path, class: "link-color-black" do %>
            <% if unchecked_notifications.any? %>
              <span class="text-dark">
              <svg class="text-warning" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zm.995-14.901a1 1 0 1 0-1.99 0A5.002 5.002 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901z"/>
              </svg>
              <%= "#{unchecked_notifications.size}" %>
              </span>
            <% else %>
              <span>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z"/>
              </svg>
              </span>
            <% end %>
          <% end %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            <%= image_tag current_user.avatar_url, size: '40x40', class: 'rounded-circle mr15'%>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to "#{current_user.name}", user_path(current_user.id), class: 'dropdown-item border-bottom pb-2' %>
            <%= link_to t('profiles.edit.title'), edit_profile_path, class: 'dropdown-item py-2' %>
            <%= link_to t('defaults.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>

    <div class="d-lg-none fixed-bottom d-flex justify-content-center p-3 bg-white">
      <%= link_to t('マイページ'), user_path(current_user.id), class: "btn btn-danger mx-3 #{display_unless('users#show')}" %>
      <%= link_to t('defaults.create_menu'), new_menu_path, class: "btn btn-danger #{display_unless('menus#new')}" %>
    </div>
</header>