<header class="fixed-top">
  <nav class='navbar navbar-expand-lg navigation navbar-light bg-light'>
    <%= link_to menus_path, class: 'navbar-brand' do %>
      <%= image_tag 'logo.png' %>
    <% end %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent'
      aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ms-auto main-nav align-items-center'>

        <li class='nav-item'>
          <%= link_to t('defaults.create_menu'), new_menu_path, class: 'btn btn-outline-danger' %>
        </li>

        <li class='nav-item dropdown dropdown-slide'>
          <%= link_to '#', class: 'nav-link', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-profile' do %>
            <%= image_tag current_user.avatar_url, size: '40x40', class: 'rounded-circle mr15'%>
          <% end %>
          <div class='dropdown-menu dropdown-menu-end'>
            <%= link_to "#{current_user.name}", edit_profile_path, class: 'dropdown-item border-bottom pb-2' %>
            <%= link_to t('profiles.edit.title'), edit_profile_path, class: 'dropdown-item py-2' %>
            <%= link_to t('defaults.logout'), logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</header>